{
  "name": "sibelplanner",
  "version": "0.4.0",
  "description": "Sicherheitsbeleuchtung planen: ISO-Ã¤hnliche Rettungszeichen + Lampen, Stromkreise, Export PDF/CSV",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64",
    "dist:portable": "electron-builder --win portable --x64"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "pdfjs-dist": "^4.4.168",
    "pdf-lib": "^1.17.1"
  },
  "build": {
    "appId": "de.sibelplanner.app",
    "productName": "SibelPlanner",
    "files": [
      "**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}